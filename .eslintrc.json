{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "error",
            "never",
            {
                "js": "always",
                "css": "always",
                "svg": "always",
                "stories": "always"
            }
        ],  
        "no-console": "off",
        "max-len": [
            "error",
            {
                "code": 140,
                "tabWidth": 2
            }
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}